<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_text_bg"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <com.infinityandroid.roundedimageview.RoundedImageView
            android:layout_width="@dimen/chat_profile_img"
            android:layout_height="@dimen/chat_profile_img"
            android:id="@+id/image"
            app:corner_radius="10"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/image7" />

        <!--        <ImageView-->
        <!--            android:layout_width="70dp"-->
        <!--            android:id="@+id/image1"-->
        <!--            android:layout_alignParentLeft="true"-->
        <!--            android:foreground="@drawable/curve_image_bg"-->
        <!--            android:src="@drawable/image7"-->
        <!--            android:layout_height="70dp">-->

        <!--        </ImageView>-->


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/name"
            android:text="Dr. Malek Khan"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/small_text_1"
            android:layout_toRightOf="@id/image"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/message"
            android:layout_toRightOf="@id/image"
            android:textSize="@dimen/small_text_2"
            android:layout_below="@id/name"
            android:text="it is a long established fact that a reader and will be distracted lisece"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/time"
            android:text="time"
            android:gravity="right"
            android:textSize="@dimen/small_text_2"
            android:layout_alignRight="@id/name"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>

</LinearLayout>