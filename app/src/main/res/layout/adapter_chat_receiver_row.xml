<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


    <com.infinityandroid.roundedimageview.RoundedImageView
        android:layout_width="@dimen/chat_profile_img"
        android:layout_height="@dimen/chat_profile_img"
        app:corner_radius="10"
        android:id="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/image7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutmsg"
        android:layout_toRightOf="@id/image"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/receiverMessage"
            android:text="Hello Doctor! How are you doing?"
            android:background="@drawable/chat_reciver_bg"
            android:textSize="@dimen/small_text_1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:id="@+id/receiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="left"
            android:textSize="@dimen/small_text_1"
            android:layout_below="@id/senderMessage"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/senderMessage"
            android:text="12.57"
            android:textColor="@android:color/darker_gray">

        </TextView>


    </LinearLayout>


</RelativeLayout>