<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/top_pager_blue"
    android:layout_height="@dimen/home_viewpager_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Looking For Your Desire\nSpecialist Doctor?"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="@dimen/big_text"
            android:paddingTop="20dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/image2"
                android:layout_height="match_parent">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Dr. Salina Zaman"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_text_1"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/small_text_2"
                    android:text="Medicine Specialist"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Good Health Clinic"
                    android:textSize="@dimen/small_text_2"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/doctorImage"
            android:src="@drawable/image1"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_height="match_parent">

        </ImageView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>