<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@null"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/blue_dialog_blue"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:id="@+id/linMyappointment"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/button_height">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/menu_myappointment"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_btn_add_photo_gallery1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_16"
                android:backgroundTint="@android:color/white"
                android:drawablePadding="@dimen/dp_32"
                android:textColor="@android:color/white"
                android:gravity="start|center_vertical"
                android:text="My Appointment"
                android:textSize="@dimen/small_text_1" />


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/image6"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"></ImageView>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:id="@+id/linProfile"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/button_height">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/menu_profile"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_btn_add_photo_gallery2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_16"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/dp_32"
                android:gravity="start|center_vertical"
                android:text="Profile"
                android:textSize="@dimen/small_text_1" />


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/image6"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"></ImageView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:id="@+id/linSettings"
            android:gravity="center_vertical"
            android:layout_height="@dimen/button_height">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/menu_setting"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_btn_add_photo_gallery3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/dp_32"
                android:gravity="start|center_vertical"
                android:text="Settings"
                android:textSize="@dimen/small_text_1" />


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/image6"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"></ImageView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:id="@+id/linLogOut"
            android:gravity="center_vertical"
            android:layout_height="@dimen/button_height">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/menu_logout"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_btn_add_photo_gallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_16"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/dp_32"
                android:gravity="start|center_vertical"
                android:text="Log Out"
                android:textSize="@dimen/small_text_1" />


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/image6"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"></ImageView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>